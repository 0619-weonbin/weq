<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Closet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 스타일 선택 드롭다운 -->
        <Spinner
            android:id="@+id/styleSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_item_bg"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:enabled="true"
            android:clickable="true"
            android:dropDownVerticalOffset="8dp"
            android:dropDownHorizontalOffset="8dp"
            android:popupBackground="#FFFFFF"
            />
        <!-- 스타일 버튼 테스트용 버튼 -->
        <Button
            android:id="@+id/goToStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="스타일"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 1번 스크롤 뷰 (CardView로 감싼 버전) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:padding="8dp">

            <HorizontalScrollView
                android:id="@+id/hscroll_outer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:fillViewport="true"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:id="@+id/clo1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>

        <!-- 2번 스크롤 뷰 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:padding="8dp">

            <HorizontalScrollView
                android:id="@+id/hscroll_top"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:fillViewport="true"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:id="@+id/clo2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>

        <!-- 3번 스크롤 뷰 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:padding="8dp">

            <HorizontalScrollView
                android:id="@+id/hscroll_bottom"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:fillViewport="true"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:id="@+id/clo3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>
