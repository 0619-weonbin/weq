<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".WeatherActivity"> <TextView
    android:id="@+id/locationTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="지역명"
    android:textSize="28sp"
    android:textStyle="bold"
    android:layout_marginBottom="16dp"
    android:gravity="center"
    tools:text="서울" />

    <ImageView
        android:id="@+id/weatherIconImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_foreground" android:layout_marginBottom="8dp"
        android:contentDescription="날씨 아이콘" />

    <TextView
        android:id="@+id/currentTempTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--°C"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        tools:text="25.5°C" />

    <TextView
        android:id="@+id/feelsLikeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체감 --°C"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        tools:text="체감 24.0°C" />

    <TextView
        android:id="@+id/weatherDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날씨 설명"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_marginBottom="24dp"
        tools:text="맑음" />

    <ImageView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/korea_map"
        android:scaleType="fitXY"
        android:contentDescription="지도 이미지"
        android:layout_marginTop="16dp" />

</LinearLayout>